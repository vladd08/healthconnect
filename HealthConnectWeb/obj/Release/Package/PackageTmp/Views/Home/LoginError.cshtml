
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model HealthConnectWeb.Models.User

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>LoginError</title>
</head>
<body>
    <div class="container">
        <div class="jumbotron" style="color:white; box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19); background-image: url(../../Content/loginbg2.jpg); margin: 0; background-repeat:no-repeat; background-size:cover;">
            <h1>We are sorry! <i class="em em-anguished "></i></h1>
            <p>
                @Model.Error
            </p>
            @using (Html.BeginForm("Login", "Home", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
            {
                <button class="btn btn-info">Back</button>
            }
        </div>
    </div>
</body>
</html>
