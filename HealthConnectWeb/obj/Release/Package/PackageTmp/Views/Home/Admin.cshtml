
@{
    ViewBag.Title = "Admin";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model HealthConnectWeb.Models.Medic

<div class="container">
    <div class="jumbotron" style="box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.2), 0 6px 20px 0 rgba(0, 0, 0, 0.19);color:white; background-image: url(../../Content/loginbg2.jpg); background-size:cover ;border:1px solid lightblue; border-radius:5px;">
        <div class="row">
            <h2>Hello, Administrator</h2>
            <div class="col-md-8">
                <h3>Adauga cont pentru medic</h3>
            @using (Ajax.BeginForm("AddMedic", "Home", new AjaxOptions { UpdateTargetId = "status", OnBegin = "Show()", OnSuccess = "Hide()" }))
            {
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(m => m.Id)
                            @Html.TextBoxFor(m => m.Id, new { @class = "form-control input-sm" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Nume)
                            @Html.TextBoxFor(m => m.Nume, new { @class = "form-control input-sm" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Prenume)
                            @Html.TextBoxFor(m => m.Prenume, new { @class = "form-control input-sm" })
                        </div>
                    </div>
                    <div id="divLoading" style="margin: 0px; padding: 0px; position: fixed; right: 0px;
                    top: 0px; width: 100%; height: 100%; background-color: #666666; z-index: 30001;
                    opacity: .8; filter: alpha(opacity=70);display:none">
                        <p style="position: absolute; top: 30%; left: 45%; color: White;">
                            Loading, please wait...<img src="../../Content/ajax-loading.gif">
                        </p>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            @Html.LabelFor(m => m.Username)
                            @Html.TextBoxFor(m => m.Username, new { @class = "form-control input-sm" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(m => m.Password)
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control input-sm" })
                        </div>
                    </div>
                </div>
                <button type="submit" style="margin-bottom:10px;" class="btn btn-info">Adauga</button>
            }
                @Html.ActionLink("Logout", "Logout", "Home", new { @class = "btn btn-info" })
            </div>
        </div>
        <div id="status"></div>
    </div>
   </div>
</div>

@section CustomScripts
   {
    <script type="text/javascript" language="javascript">
    function Show() {
        $("#divLoading").show();
    }

    function Hide() {
        $("#divLoading").hide();
    }
    </script>
}

