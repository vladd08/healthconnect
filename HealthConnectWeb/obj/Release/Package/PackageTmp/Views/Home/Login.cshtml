@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@model HealthConnectWeb.Models.User


<div class="container">
    <div class="row" style="text-align:center; font-family: Impact, Haettenschweiler, 'Arial Narrow Bold', sans-serif">
        <h1>Welcome</h1>
    </div>
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
            @using (Html.BeginForm("Authenticate", "Home", FormMethod.Post))
            {
                @Html.LabelFor(m => m.Username);
                @Html.TextBoxFor(m => m.Username, new { @class = "form-control" });
                @Html.LabelFor(m => m.Password);
                @Html.PasswordFor(m => m.Password, new { @class = "form-control" });
                <div class="row">
                    <div class="col-md-2">
                        <label style="font-style: italic">Login as:</label>
                    </div>
                    <div class="col-md-10">
                        <label>Medic</label>
                        <input type="radio" name="role" value="true" />
                        <label>Pacient</label>
                        <input type="radio" name="role" value="false" />
                    </div>
                </div>
                        <button type="submit" class="btn btn-default" style="margin-top: 10px">Submit</button>
            }
        </div>
    </div>
</div>